- if @separator.nil? or @separator.new_record?
  - fpath = page_separators_path(@page)
  - fmethod = :post
  - fid = 'fixedWidgetForm'
- else
  - fpath = page_separator_path(@page, @separator)
  - fmethod = :put
  - fid = 'widgetForm'

= form_tag( fpath, :method => fmethod, :class => fid) do
  %div
    != text_field 'separator', 'title', :class => 'separatorFormTitle', :class => 'autofocus moderate'
  
  - if @separator.nil? or @separator.new_record?
    %input#add_SeparatorFormBefore{:type => 'hidden', :name=> 'position[before]', :value => '0'}/
    %input#add_SeparatorFormSlot{:type => 'hidden', :name=> 'position[slot]', :value => '0'}/
    %button{:class => 'submit', :type => 'submit'}= t('add_separator')
  - else
    %button{:class => 'submit', :type => 'submit'}= t('edit_separator')
  
  %a{:href => '#', :class => 'cancel'}= t('cancel')