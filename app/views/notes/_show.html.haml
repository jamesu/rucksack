- empty_note = !(object.title? or object.content? or object.show_date)
- hover_handle = "page_slot_handle_#{page_slot.id}"
.pageNote
  - if object.title? or object.show_date
    %h2{:hover_handle => hover_handle}
      - if object.title?
        = h object.title
      - if object.show_date
        %span.pageNoteDate{:hover_handle => hover_handle}= object.created_at.strftime(@time_now.year != object.created_at.year ? t('date_format_dmy') : t('date_format_dm'))
  - if empty_note
    .pageNoteContent{'hover_handle' => hover_handle}= t('empty_note')
  - else
    .pageNoteContent{'hover_handle' => hover_handle}= object.rich_content